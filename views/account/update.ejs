<% if (notice && notice.length > 0) { %>
  <div class="flash-message notice">
    <%= notice %>
  </div>
<% } %>

<div class="form-container">
  <h1>Update Account Information</h1>
  
  <% if (errors) { %>
    <ul class="error-list">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/account/update" method="post">
    <input type="hidden" name="account_id" value="<%= locals.accountData ? accountData.account_id : '' %>">
    
    <div class="form-row">
      <div class="form-group">
        <label for="account_firstname">First Name: <span class="required">*</span></label>
        <input 
          type="text" 
          id="account_firstname" 
          name="account_firstname" 
          required
          value="<%= locals.accountData ? accountData.account_firstname : '' %>"
        >
      </div>

      <div class="form-group">
        <label for="account_lastname">Last Name: <span class="required">*</span></label>
        <input 
          type="text" 
          id="account_lastname" 
          name="account_lastname" 
          required
          value="<%= locals.accountData ? accountData.account_lastname : '' %>"
        >
      </div>
    </div>

    <div class="form-group">
      <label for="account_email">Email: <span class="required">*</span></label>
      <input 
        type="email" 
        id="account_email" 
        name="account_email" 
        required
        value="<%= locals.accountData ? accountData.account_email : '' %>"
      >
    </div>

    <button type="submit" class="btn-submit">Update Account</button>
  </form>

  <hr style="margin: 2rem 0;">

  <h2>Change Password</h2>
  <form action="/account/change-password" method="post">
    <input type="hidden" name="account_id" value="<%= locals.accountData ? accountData.account_id : '' %>">
    
    <div class="form-group">
      <label for="account_password">New Password: <span class="required">*</span></label>
      <input 
        type="password" 
        id="account_password" 
        name="account_password" 
        required
        pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{12,}$"
      >
      <small>Min 12 characters, 1 uppercase, 1 lowercase, 1 number, 1 special character.</small>
    </div>

    <button type="submit" class="btn-submit">Change Password</button>
  </form>
</div>
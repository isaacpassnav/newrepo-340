<%- messages() %>

<div class="form-container">
  <h1>Add New Vehicle</h1>
  
  <% if (errors) { %>
    <ul class="error-list">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form id="addInventoryForm" action="/inv/add-inventory" method="post">
    
    <div class="form-group">
      <label for="classificationList">Classification:</label>
      <%- classificationSelect %>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="inv_make">Make: <span class="required">*</span></label>
        <input 
          type="text" 
          id="inv_make" 
          name="inv_make" 
          required
          pattern="^[A-Za-z\s]{3,}$"
          title="Make must be at least 3 characters."
          value="<%= locals.inv_make ? inv_make : '' %>"
        >
      </div>

      <div class="form-group">
        <label for="inv_model">Model: <span class="required">*</span></label>
        <input 
          type="text" 
          id="inv_model" 
          name="inv_model" 
          required
          pattern="^[A-Za-z0-9\s]{3,}$"
          title="Model must be at least 3 characters."
          value="<%= locals.inv_model ? inv_model : '' %>"
        >
      </div>
    </div>

    <div class="form-group">
      <label for="inv_description">Description: <span class="required">*</span></label>
      <textarea 
        id="inv_description" 
        name="inv_description" 
        rows="4"
        required
      ><%= locals.inv_description ? inv_description : '' %></textarea>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="inv_image">Image Path: <span class="required">*</span></label>
        <input 
          type="text" 
          id="inv_image" 
          name="inv_image" 
          required
          value="<%= locals.inv_image ? inv_image : '/images/vehicles/no-image.png' %>"
          placeholder="/images/vehicles/your-image.jpg"
        >
        <small>Default: /images/vehicles/no-image.png</small>
      </div>

      <div class="form-group">
        <label for="inv_thumbnail">Thumbnail Path: <span class="required">*</span></label>
        <input 
          type="text" 
          id="inv_thumbnail" 
          name="inv_thumbnail" 
          required
          value="<%= locals.inv_thumbnail ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>"
          placeholder="/images/vehicles/your-image-tn.jpg"
        >
        <small>Default: /images/vehicles/no-image-tn.png</small>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="inv_price">Price: <span class="required">*</span></label>
        <input 
          type="number" 
          id="inv_price" 
          name="inv_price" 
          required
          min="0"
          step="0.01"
          value="<%= locals.inv_price ? inv_price : '' %>"
          placeholder="25000"
        >
      </div>

      <div class="form-group">
        <label for="inv_year">Year: <span class="required">*</span></label>
        <input 
          type="text" 
          id="inv_year" 
          name="inv_year" 
          required
          pattern="^\d{4}$"
          title="Year must be 4 digits."
          maxlength="4"
          value="<%= locals.inv_year ? inv_year : '' %>"
          placeholder="2024"
        >
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="inv_miles">Miles: <span class="required">*</span></label>
        <input 
          type="number" 
          id="inv_miles" 
          name="inv_miles" 
          required
          min="0"
          step="1"
          value="<%= locals.inv_miles ? inv_miles : '' %>"
          placeholder="15000"
        >
      </div>

      <div class="form-group">
        <label for="inv_color">Color: <span class="required">*</span></label>
        <input 
          type="text" 
          id="inv_color" 
          name="inv_color" 
          required
          pattern="^[A-Za-z\s]{2,}$"
          title="Color must be at least 2 characters."
          value="<%= locals.inv_color ? inv_color : '' %>"
          placeholder="Silver"
        >
      </div>
    </div>

    <button type="submit" class="btn-submit">Add Vehicle</button>
  </form>
</div>
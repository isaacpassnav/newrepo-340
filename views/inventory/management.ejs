<% if (notice && notice.length > 0) { %>
  <div class="flash-message notice">
    <%= notice %>
  </div>
<% } %>

<% if (success && success.length > 0) { %>
  <div class="flash-message success">
    <%= success %>
  </div>
<% } %>

<% if (error && error.length > 0) { %>
  <div class="flash-message error">
    <%= error %>
  </div>
<% } %>

<div class="management-container">
  <h1>Vehicle Management</h1>
  
  <div class="management-actions">
    <div class="action-card">
      <h2>Manage Classifications</h2>
      <p>Add new vehicle classifications to organize your inventory.</p>
      <a href="/inv/add-classification" class="btn-action">Add New Classification</a>
    </div>

    <div class="action-card">
      <h2>Manage Inventory</h2>
      <p>Add new vehicles to your inventory database.</p>
      <a href="/inv/add-inventory" class="btn-action">Add New Vehicle</a>
    </div>
  </div>
</div>